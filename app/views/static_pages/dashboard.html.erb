<h1>Consultar saldo di√°rio</h1>

<%= form_tag(search_account_path, :method => "post") do |f| %>

	<div class="form-group">
	  <div id="date_calendar" >
	   <%= text_field_tag :date_calendar_now, "", class: "form-control datepicker" %>

		</div>
	</div>

	<div class="form-group">
	 <%= submit_tag "Enviar" %>
	</div>

<% end %>

<div class="panel panel-info">
  <div class="panel-heading"><%= link_to 'Listing Current Account', current_accounts_path %></div>
  <div class="panel-body">
    <strong><p align="center">Saldo: <%= number_to_currency(CurrentAccount.saldo, unit: "R$ ", separator: ",", delimiter: ".") %></p></strong>
    <%= link_to 'New Current account', new_current_account_path, class: "btn btn-primary btn-lg btn-block" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Data</th>
          <th>Valor</th>
        </tr>
      </thead>
  
      <tbody> 
        <% @current_accounts.sort_by do |current_account| [0] %>
          <tr>
          	<td><%= date_br(current_account[0]) %></td>
          	<td><%= number_to_currency(current_account[1], unit: "R$ ", separator: ",", delimiter: ".") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      language: 'pt-BR'
    });
  });
</script>
